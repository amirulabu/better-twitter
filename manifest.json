{
	"name": "Better Twitter",
	"version": "0.0.0",
	"description": "Makes the Twitter interface better.",
	"manifest_version": 2,
	"options_ui": {
    "page": "options.html",
    "open_in_tab": false,
		"chrome_style": true
  },
	"browser_action": {
    "default_popup": "options.html"
  },
	"permissions": [
    "storage"
  ],
	"web_accessible_resources": [
    "options.js",
    "prefs.js"
  ],
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://twitter.com/*"
			],
			"css": [
				"content.css"
			],
			"js": [
        "utils.js",
        "prefs.js",
				"content.js"
			]
		}
	]
}
