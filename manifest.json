{
	"name": "Better Twitter",
	"version": "1.1.0",
	"description": "Hide the things which are not important to you.",
	"manifest_version": 2,
	"options_ui": {
    "page": "options.html",
    "open_in_tab": false,
		"browser_style": true,
		"chrome_style": true
  },
	"icons": {
  	"64": "icon-64.png",
  	"128": "icon-128.png"
	},
	"browser_action": {
		"browser_style": true,
    "default_popup": "options.html"
  },
	"permissions": [
    "storage"
  ],
	"web_accessible_resources": [
    "options.js",
    "prefs.js"
  ],
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://twitter.com/*"
			],
			"css": [
				"content.css"
			],
			"js": [
        "utils.js",
        "prefs.js",
				"content.js"
			]
		}
	]
}
